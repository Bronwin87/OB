@page
@model Shop.UI.Pages.NationalDelivery.IndexModel
@{
    ViewData["Title"] = "Contact";
}
<style>
    .label {
        font-size 14px;
        color: #858585;
        margin-left: 20px;
        font-weight: 400;
        margin-bottom: 0px;
    }

    .input {
        width: 100%;
    }
</style>

<div class="container section">



    <div class="columns">
        <div class="column is-6" data-aos="fade-right">
            <div class="col-xs-2">
