@page
@model Shop.UI.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Account Users";
}

<link type="text/css" rel="stylesheet" href="~/lib/DataTables/css/jquery.dataTables.min.css" />

<style type="text/css">
    #DataTable_processing {
        background-color: #23d160;
        z-index: 100;
        height: 65px;
    }
</style>

<table id="DataTable" class="display" style="width:100%" data-request-url="@Url.Action("GetData", "DataTable", new { dataSource = "Users" })">
    <thead>
        <tr>
            <th data-name="Id" data-data="id">Id</th>
            <th data-name="FirstName" data-data="firstName">First Name</th>
            <th data-name="LastName" data-data="lastName">Last Name</th>
            <th data-name="Email" data-data="email">Email</th>
            <th data-name="Username" data-data="username">Username</th>
            <th data-name="Account" data-data="account">Account</th>
            <th data-name="Type" data-data="type">Type</th>
            <th data-searchable="false" data-orderable="false" data-name="UserLink" data-data="userLink">View User</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th data-name="Id" data-data="id">Id</th>
            <th data-name="FirstName" data-data="firstName">First Name</th>
            <th data-name="LastName" data-data="lastName">Last Name</th>
            <th data-name="Email" data-data="email">Email</th>
            <th data-name="Username" data-data="username">Username</th>
            <th data-name="Account" data-data="account">Account</th>
            <th data-name="Type" data-data="type">Type</th>
            <th data-searchable="false" data-orderable="false" data-name="UserLink" data-data="userLink">View User</th>
        </tr>
    </tfoot>
</table>

@section scripts {
    <script src="/public/assets/js/jquery-3.1.0.min.js"></script>
    <script type="text/javascript" src="~/lib/DataTables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/admin/dataTableInit.js"></script>
}